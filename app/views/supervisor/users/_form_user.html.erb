<%= form_for [:supervisor, @user] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :date_of_join %>
  <%= f.date_select :date_of_join, class: "form-control" %> </br>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.label :is_supervisor, class: "checkbox inline" do %>
    <%= f.check_box :is_supervisor %>
    <span>Supervisor</span>
  <% end %>

  <%= f.submit "Create member", class: "btn btn-primary" %>
<% end %>