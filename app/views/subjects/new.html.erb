<h1>New Subject</h1>
<%= form_for @subject do |f| %>
  <div class="col-md-4">
    <p>
      <%= f.label :name, "Subject name" %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, :rows => 10 %>
    </p>
  </div>
  <div class="col-md-8">
    <%= f.fields_for :tasks do |builder| %>
      <%= render 'task_fields', :f => builder %>
    <% end %>
  </div>
  <p><%= f.submit "Submit" %></p>
<% end %>
<%= link_to 'Back', subjects_path %>