<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-6">
    <ul class ="list-group">
      <li class="list-group-item list-group-item-info">Email : <%= @user.email%></li>
      <li class="list-group-item list-group-item-info">Address : <%= @user.address %></li>
      <li class="list-group-item list-group-item-info">Date Of Join : <%= @user.created_at %></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h1>List course added</h1>
    <ul class="list-group">
      <% @course_list.each do |course| %>
        <% if course.get_training_progress(course, current_user).status.nil? %>
          <li class="list-group-item list-group-item-info">    
            <%= link_to course.name, "#",
              data: {confirm: "This course hasn't been start"} %> </br>
            Status : <%= course.get_status course %>.
          </li>
        <% else %>
          <li class="list-group-item list-group-item-info">
            <b>
              <%= link_to course.name, course_path(course) %> </br>
              Quantity subject complete:
                <%= course.quantity_subject_done(
                  course.get_training_progress course, current_user) %> </br>
              Quantity task done:
                <%= course.quantity_task_done(
                  course.get_training_progress course, current_user) %> </br>
            </b>
            </br>
            Status : <%= course.get_status course %>.
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<ul class="list-group">
  <% @activities.each do |activity| %>
    <li>
      <b>
        <%= activity.name %> about
        <%= time_ago_in_words(activity.created_at) %> ago.
      </b>
      </br>
    </li>
  <% end %>
</ul>
